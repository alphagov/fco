<section class="group fco-news">

  <header class="fco-header">
    <hgroup>
      <h1>Travel advice</h1>
      <h2>From the Foreign &amp; Commonwealth Office</h2>
    </hgroup>
  </header>
  
  <article>
    <div class="inner">
      <h1><%= @travel_news.title %></h1>
      <h2 class="date"><%= long_format_date(@travel_news.published_at) %></h2>
      <div class="summary"><p><%= @travel_news.description %></p></div>
      <%= @travel_news.body_markup.html_safe %>
    </div>
  </article>
</section>