<section class="group fco-country">
  
  <header class="fco-header">
    <hgroup>
      <h1>Travel advice</h1>
      <h2>From the Foreign &amp; Commonwealth Office</h2>
    </hgroup>
  </header>

  <div class="article-container">
    <article>
      <div class="inner">
        <h1><%= @country.name %></h1>
        
        <div class="advisory against-any-travel">
          <h2>We advise against any travel to all of <%= @country.name %></h2>
        </div>

        <div class="advisory high-alert against-essential-travel">
          <h2>We advise only essential travel to all of <%= @country.name %></h2>
        </div>

        <a href="#presence" class="visuallyhidden">Skip to information about the British presence in <%= @country.name %></a>

        <%- if [:all, :parts].include?(@country.avoid_travel_restriction) -%>
          <p>We advise against any travel to <%= @country.avoid_travel_restriction.to_s %> of <%= @country.name %>.</p>
        <%- end -%>

        <%- if [:all, :parts].include?(@country.essential_travel_restriction) -%>
          <p>We advise only essential travel to <%= @country.essential_travel_restriction.to_s %> of <%= @country.name %>.</p>
        <%- end -%>

        <%- @country.raw_travel_advice['travel_advice_sections'].each do |section| -%>
          <%= TravelAdviceSectionPresenter.new(section).html %>
        <%- end -%>
      </div>
    </article>
  </div>
  
  <div class="country-details">
    
    <div class="country-info">
      
      

      <div class="country-map">
      
      </div>
    </div>
    
    <div class="presence-info" id="presence">
    
      <h2>British presence</h2>
    
      <%- @missions.each do |mission| -%>
        <%= debug mission -%>
      <%- end -%>
    
    </div
    
  </div>

</section>